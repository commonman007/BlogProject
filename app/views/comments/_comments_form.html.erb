<%= form_for comment, remote: true do |f| %>
  <%= f.label :comment %>:
  <%= f.text_field :message, class: "form-control", data: {textarea: "message"}, id: "comment_message_#{@blog.id}" %>

  <%= f.hidden_field :blog_id, value: blog.id %>
  <%= f.submit "send", class: "btn btn", style: "display: none", data: {send: "comment"} %>
<% end %>