<!DOCTYPE html>
<html>
  <head <%= yield(:head_attributes) %> >
    <title>BlogProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <%if @current_user %>
    <div class='sticky-top bg-secondary'>
      <div class="text-end align-middle"><%= link_to 'Logout', logout_path ,:class=>"btn btn-success"%></div>
      <div class="text-center align-middle"><h4><%= link_to 'Home', blogs_path ,:class=>"link-primary"%></h4></div>
    </div>
  <% end %>
  <%= action_cable_meta_tag %>
  <body>
    <%= yield %>
  </body>
</html>
